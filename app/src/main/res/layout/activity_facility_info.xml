<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sparkling_paris"
    android:backgroundTint="@color/colorPrimary"
    tools:context="com.chscommandcenter.jsonpractice.FacilityInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/facilityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:text="Facility Name"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/background_light"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/facilityAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_below="@+id/facilityName"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/facilityID"

            android:text="facility address"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/facilityID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_toRightOf="@+id/facilityAlignment"

                android:layout_weight="1"
                android:text="facilityID"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_light"
                android:textColorLink="@android:color/background_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/facilityAlignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_above="@+id/facilityID"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_weight="1"
                android:text="Side"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/facilityDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/facilityAddress"

            android:text="Division"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cernerHub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cernerhub"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/facilityPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/facilityDivision"
            android:layout_marginTop="38dp"
            android:text="Phone Number"

            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT Director"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OnCall Contact:"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Inventory" />

    </LinearLayout>

</android.widget.RelativeLayout>
